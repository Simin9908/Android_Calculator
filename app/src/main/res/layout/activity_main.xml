<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/solution_tv"
        android:text="0"
        android:textSize="30dp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textColor="@color/black"
        android:layout_above="@id/result_tv"
        android:layout_margin="15dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textColor="@color/black"
        android:layout_above="@id/buttons_layout"
        android:layout_margin="15dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:paddingTop="15dp"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_C"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#B4FF3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="("
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#8F8F8F"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_bracket"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text=")"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#8F8F8F"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:visibility="visible"
                app:backgroundTint="#B57E06F6"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:visibility="visible"
                app:backgroundTint="#B57E06F6"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:visibility="visible"
                app:backgroundTint="#B57E06F6"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sub"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="32dp"
                android:visibility="visible"
                app:backgroundTint="#B57E06F6"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:backgroundTint="#B4FF3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_point"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="."
                android:textColor="@color/black"
                android:textSize="32dp"
                app:backgroundTint="#FFEB3B"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_eq"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="="
                android:textColor="@color/black"
                android:textSize="32dp"
                android:visibility="visible"
                app:backgroundTint="#B57E06F6"
                app:cornerRadius="36dp"></com.google.android.material.button.MaterialButton>
        </LinearLayout>





    </LinearLayout>



</RelativeLayout>